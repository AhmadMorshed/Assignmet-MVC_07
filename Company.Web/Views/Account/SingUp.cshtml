@model SignUpViewModel

@* @{

    ViewData["Title"] = "SingUp";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
} *@

<h1>SingUp</h1>
<form asp-action="Register" method="post">
    <div asp-validation-summary="All"></div>
    <input  type="text" asp-for="FirstName" placeholder="FirstName" class="from-control" />
    <span asp-validation-for="FirstName"></span>
    <br />
    <input type="text" asp-for="LastName" placeholder="FirstName" class="from-control" />
    <span asp-validation-for="LastName"></span>
    <br />
    <input type="text" asp-for="Email" placeholder="FirstName" class="from-control" />
    <span asp-validation-for="Email"></span>
    <br />
    <input type="text" asp-for="Password" placeholder="FirstName" class="from-control" />
    <span asp-validation-for="Password"></span>
    <br />
    <input type="text" asp-for="ConfirmPassword" placeholder="FirstName" class="from-control" />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />

    <div class="wthree-text">
        <label class="anim">
            <input  asp-action="Agree" class="checkbox" required="" />
            <span>I Agree To The Terms & Conditions</span>

        </label>
        <div class="clear">

        </div>
        <input type="submit" value="SIGNUP" />
    </div>
</form>
<p> Do You Have An Acoount? <a asp-action="Login">Login Now !</a> </p>

